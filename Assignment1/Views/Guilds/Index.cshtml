@model IEnumerable<Assignment1.Models.Guild>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GuildName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GuildTag)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GuildHall)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Level)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GuildName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GuildTag)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GuildHall)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Level)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.GuildID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.GuildID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.GuildID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
